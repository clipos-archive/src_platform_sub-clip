# Summary: shortcut to ebuild manifest
# Provide clip completions

if [ "${1}" = "--complete" ]; then
	find ${2} -mindepth 1 -maxdepth 1 \( -name "*.ebuild" \) -printf '%P\n'
else
	clip ssh ebuild ${1} manifest
fi
